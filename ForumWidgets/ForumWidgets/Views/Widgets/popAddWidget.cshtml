@using LangResources.Utility
@model ForumWidgets.Models.ForumWidget
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times; </button>
            <h4 class="modal-title" id="myModalLabel">Add Widget</h4>
        </div>
    @using (Html.BeginForm("Add", "Widgets", FormMethod.Post, new { id = "addWidget", @class="form-horizontal" }))
    {    
        <div class="modal-body">
        <div class="container">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false)
                @Html.HiddenFor(m=>m.Id)
                        <div class="form-group">
                            <label class="control-label col-sm-2">Name</label>
                            <div class="col-sm-4">@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })</div>
                            <div class="col-sm-6"></div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Widget code</label>
                            <div class="col-sm-10">@Html.TextAreaFor(m => m.HtmlString, new { @class = "form-control", rows="6" })</div>
                        </div>

        </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-warning" data-dismiss="modal">@ResourceManager.GetLocalisedString("btnCancel", "labels")</button>
            <input type="submit" class="btn btn-primary" value="@ResourceManager.GetLocalisedString("btnSave", "labels")"/>
        </div>
    }
